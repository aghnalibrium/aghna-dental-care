// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// User model for authentication (doctors, admin, receptionist)
model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String
  role      UserRole @default(STAFF)
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  appointments Appointment[]
  medicalRecords MedicalRecord[]

  @@map("users")
}

enum UserRole {
  ADMIN
  DOCTOR
  STAFF
}

// Patient model
model Patient {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  firstName       String
  lastName        String
  dateOfBirth     DateTime
  gender          Gender
  phone           String
  email           String?
  address         String?
  emergencyContact String?
  allergies       String?
  medicalServices String?
  notes           String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  appointments    Appointment[]
  medicalRecords  MedicalRecord[]
  invoices        Invoice[]

  @@map("patients")
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

// Appointment model
model Appointment {
  id          String            @id @default(auto()) @map("_id") @db.ObjectId
  patientId   String            @db.ObjectId
  doctorId    String            @db.ObjectId
  date        DateTime
  startTime   DateTime
  endTime     DateTime
  status      AppointmentStatus @default(SCHEDULED)
  reason      String?
  notes       String?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  // Relations
  patient     Patient @relation(fields: [patientId], references: [id], onDelete: Cascade)
  doctor      User    @relation(fields: [doctorId], references: [id])

  @@map("appointments")
}

enum AppointmentStatus {
  SCHEDULED
  CONFIRMED
  IN_PROGRESS
  COMPLETED
  CANCELLED
  NO_SHOW
}

// Medical Record model
model MedicalRecord {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  patientId   String   @db.ObjectId
  doctorId    String   @db.ObjectId
  date        DateTime @default(now())
  diagnosis   String
  symptoms    String?
  treatment   String
  prescription String?
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  patient     Patient @relation(fields: [patientId], references: [id], onDelete: Cascade)
  doctor      User    @relation(fields: [doctorId], references: [id])
  treatments  Treatment[]

  @@map("medical_records")
}

// Treatment model (specific dental procedures)
model Treatment {
  id              String        @id @default(auto()) @map("_id") @db.ObjectId
  medicalRecordId String        @db.ObjectId
  toothNumber     String?
  procedure       String
  description     String?
  cost            Float
  status          TreatmentStatus @default(PENDING)
  completedAt     DateTime?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  // Relations
  medicalRecord   MedicalRecord @relation(fields: [medicalRecordId], references: [id], onDelete: Cascade)

  @@map("treatments")
}

enum TreatmentStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

// Invoice/Billing model
model Invoice {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  patientId     String        @db.ObjectId
  invoiceNumber String        @unique
  date          DateTime      @default(now())
  dueDate       DateTime
  subtotal      Float
  tax           Float         @default(0)
  discount      Float         @default(0)
  total         Float
  status        InvoiceStatus @default(UNPAID)
  notes         String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // Relations
  patient       Patient @relation(fields: [patientId], references: [id], onDelete: Cascade)
  items         InvoiceItem[]
  payments      Payment[]

  @@map("invoices")
}

enum InvoiceStatus {
  UNPAID
  PARTIALLY_PAID
  PAID
  OVERDUE
  CANCELLED
}

// Invoice Items
model InvoiceItem {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  invoiceId   String   @db.ObjectId
  description String
  quantity    Int      @default(1)
  unitPrice   Float
  total       Float
  createdAt   DateTime @default(now())

  // Relations
  invoice     Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@map("invoice_items")
}

// Payment model
model Payment {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  invoiceId     String        @db.ObjectId
  amount        Float
  method        PaymentMethod
  transactionId String?
  notes         String?
  paidAt        DateTime      @default(now())
  createdAt     DateTime      @default(now())

  // Relations
  invoice       Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@map("payments")
}

enum PaymentMethod {
  CASH
  CREDIT_CARD
  DEBIT_CARD
  TRANSFER
  OTHER
}
